<div class="the-whole-thing">
  <p id="notice"><%= notice %></p>

  <h1>Feels</h1>

  <table class="table feel-table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Mood</th>
        <th>Note</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @feels.each do |feel| %>
        <tr>
          <td><%= feel.date %></td>
          <td class="mood-<%= feel.mood %>"></td>
          <td><%= feel.note %></td>
          
          <td><%= link_to 'Edit', edit_feel_path(feel) %></td>
          <td><%= link_to 'Destroy', feel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Feel', new_feel_path %>
</div>